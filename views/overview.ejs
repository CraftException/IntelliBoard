    <% } else if (displayname) { %>
    window.onload = () => {
        <% for (var i = 0; i < pageLength; i++) { %>
        <% pageContent = bookData.pages[i] %>
        const data = buildImagePreview(JSON.parse(`<%- JSON.stringify(pageContent) %>`));
        document.getElementById("content<%= i %>").innerHTML = `<img style="margin: 5px;" width="<%- pageContent.maxPageWidth/10 %>px" height="<%- pageContent.maxPageHeight/10 %>px" src="${data}">`;
