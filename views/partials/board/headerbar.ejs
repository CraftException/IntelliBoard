<% //Headerbar Partial Template %>

<table>
    <tr>
        <!-- Back to Overview -->
        <td style="margin-right: 20px !important; padding-right: 20px"><center><button style="text-decoration: none; border: 0;  background-color: transparent; color: #000000" id="books" class="unselectable" onclick="document.location.href='Overview.php'">
                    <i style="font-size: 20px; margin-bottom: 5px; " class="far fa-arrow-alt-circle-left"></i><br><%= lang.headerbar.backToHome %></button></center></td>

        <!-- Color Dots -->
        <td style="text-align: center">
            <span id="color1" onclick="setColor(1)" style="margin-left: p30x; background-color: <%= colors[0] %>" class="dot activedot unselectable"></span>
            <span id="color2" onclick="setColor(2)" style="margin-left: 5px; background-color: <%= colors[1] %>" class="dot unselectable"></span>
            <span id="color3" onclick="setColor(3)" style="margin-left: 5px; background-color: <%= colors[2] %>" class="dot unselectable"></span>
            <span id="color4" onclick="setColor(4)" style="margin-left: 5px; background-color: <%= colors[3] %>" class="dot unselectable"></span>
            <span id="color5" onclick="setColor(5)" style="margin-left: 5px; background-color: <%= colors[4] %>" class="dot unselectable"></span>
            <span id="color6" onclick="setColor(6)" style="margin-left: 5px; background-color: <%= colors[5] %>" class="dot unselectable"></span>
            </td>

        <!-- Width Dots -->
        <td style="text-align: center">
            <span id="width3" onclick="setWidth(3)" style="margin-left: 30px; height: 3px; width: 3px" class="dot activedot unselectable"></span>
            <span id="width5" onclick="setWidth(5)" style="margin-left: 5px; height: 5px; width: 5px" class="dot unselectable"></span>
            <span id="width8" onclick="setWidth(8)" style="margin-left: 5px; height: 8px; width: 8px" class="dot unselectable"></span>
            <span id="width10" onclick="setWidth(10)" style="margin-left: 5px; height: 10px; width: 10px" class="dot unselectable"></span>
            <span id="width13" onclick="setWidth(13)" style="margin-left: 5px; height: 13px; width: 13px" class="dot unselectable"></span>
            <span id="width15" onclick="setWidth(15)" style="margin-left: 5px; height: 15px; width: 15px" class="dot unselectable"></span>
            <span style=" padding-right: 40px; padding-top: 28px; padding-bottom: 15px"></span>
        </td>

        <!-- Undo / Redo -->
        <td style="margin-right: 20px !important; padding-left: 25px"><center><button style="text-decoration: none; border: 0; background-color: transparent; color: #000000" onclick="undo()" id="undo" class="unselectable"><i style="font-size: 20px; margin-bottom: 5px" class="fas fa-undo"></i><br><%= lang.headerbar.undo %></button></center></td>
        <td style="margin-left: 20px !important; padding-left: 20px; padding-right: 40px;"><center><button style="text-decoration: none; border: 0; background-color: transparent; color: #000000" onclick="redo()" class="unselectable"><i style="font-size: 20px; margin-bottom: 5px" class="fas fa-redo"></i><br><%= lang.headerbar.redo %></button></center></td>
    </tr>
</table>